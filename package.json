{
    "name": "@coactive-steph/react-tailwindcss-datepicker",
    "version": "0.1.4",
    "description": "A modern React Datepicker using Tailwind CSS 3",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "author": "onesine",
    "license": "MIT",
    "scripts": {
        "watch": "rollup -c -w",
        "clean": "rm -rf dist",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "pret": "prettier -c .",
        "pret:fix": "prettier -w .",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "build": "npm run pret && npm run lint && npm run clean && rollup -c",
        "pub-local": "npm run build && npm pack",
        "pub": "npm build && npm publish",
        "dev": "next dev -p 8888"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/onesine/react-tailwindcss-datepicker"
    },
    "keywords": [
        "react-tailwindcss-datepicker",
        "react-datepicker",
        "tailwind-datepicker",
        "datepicker",
        "date-picker",
        "daterangepicker",
        "react-daterangepicker",
        "date-range",
        "date-range-picker",
        "tailwind-daterange-picker"
    ],
    "peerDependencies": {
        "dayjs": "^2.0.0-alpha.4",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.4",
        "@rollup/plugin-node-resolve": "^15.2.1",
        "@rollup/plugin-typescript": "^11.1.3",
        "@tailwindcss/forms": "^0.5.6",
        "@types/node": "20.5.8",
        "@types/react": "^18.2.21",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "autoprefixer": "^10.4.15",
        "dayjs": "^1.11.9",
        "eslint": "^8.48.0",
        "eslint-config-next": "^13.4.19",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "next": "^13.4.19",
        "postcss": "^8.4.29",
        "prettier": "^3.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rollup": "^3.28.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "tailwindcss": "^3.3.3",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    }
}
